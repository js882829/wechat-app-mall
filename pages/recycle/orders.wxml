<van-empty wx:if="{{ !list }}" description="暂无订单" />
<van-card
  wx:for="{{list}}" wx:key="id"
  origin-price="{{ item.amount }}"
  price="{{ item.amountRecycle }}"
  title="{{ item.name }}"
  thumb="{{ item.pic }}"
  tag="{{ item.statusStr }}"
  centered
>
  <view slot="desc">
    <view>订单号 {{ item.orderNumber }}</view>
    <view>回收时间 {{ item.dateAdd }}</view>
  </view>
  <view slot="footer">
    <van-button type="primary" size="mini" data-id="{{ item.id }}" bind:click="detail">详情</van-button>
    <van-button wx:if="{{ item.validCode == 17 && !item.recycleOrderId }}" type="danger" size="mini" data-type="1" data-orderid="{{ item.id }}" data-platform="jd" bind:click="huishou">取消订单/删除订单</van-button>
  </view>
</van-card>